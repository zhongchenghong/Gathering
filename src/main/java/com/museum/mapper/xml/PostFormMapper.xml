<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.museum.dao.PostFormMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.museum.domain.PostForm">
                    <id column="id" property="id"/>
                    <result column="department" property="department"/>
                    <result column="draft_name" property="draftName"/>
                    <result column="applyTime" property="applyTime"/>
                    <result column="title" property="title"/>
                    <result column="remarks" property="remarks"/>
                    <result column="path" property="path"/>
                    <result column="filename" property="filename"/>
                    <result column="uid" property="uid"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, department, draft_name, applyTime, title, remarks, path, filename, uid
        </sql>

</mapper>